extends ../layouts/main-layout.pug

block title
  title Add Product

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    - var action = ''
    if(editing)
      - action = 'edit-product'
    else
      - action = 'add-product'
    form.product-form(action=("/admin/"+action) method="post")
      .form-control
        label(for="title") Title
        input(type="text", name="title", id="title")
      .form-control
        label(for="imgUrl") Image URL
        input(type="text", name="imgUrl", id="imgUrl")
      .form-control
        label(for="price") Price
        input(type="number", step="0.1", name="price", id="price")
      .form-control
        label(for="desc") Description
        textarea(name="desc", cols="42", rows="5", id="desc")
      button.btn(type="submit") 
        if(editing)
          | Edit Product 
        else
          | Add Product